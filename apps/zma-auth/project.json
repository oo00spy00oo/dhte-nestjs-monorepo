{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "zma-auth",
  "projectType": "application",
  "sourceRoot": "apps/zma-auth/src",
  "tags": [],
  "targets": {
    "build": {
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      },
      "executor": "nx:run-commands",
      "options": {
        "args": ["node-env=production"],
        "command": "webpack-cli build",
        "assets": [
          {
            "input": "apps/zma-auth",
            "glob": "**/(*.yaml|yml)",
            "output": "."
          },
          {
            "input": "libs/zma-i18n/src/i18n",
            "glob": "**/*",
            "output": "./i18n"
          },
          {
            "input": "libs/zma-grpc",
            "glob": "src/proto/**/user.proto",
            "output": "."
          }
        ]
      }
    },
    "serve": {
      "configurations": {
        "development": {
          "buildTarget": "zma-auth:build:development"
        },
        "production": {
          "buildTarget": "zma-auth:build:production"
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "zma-auth:build",
        "runBuildTargetDependencies": false
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
